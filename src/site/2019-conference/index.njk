{% import "components/call-to-action.njk" as callToAction %}

<!-- prettier-ignore -->
{% extends "layouts/_page.njk" %}

<!-- prettier-ignore -->
{% set title = "2019 Conference" %}
<!-- prettier-ignore -->
{% set headerText = "2019 Annual Conference" %}
<!-- prettier-ignore -->
{% set stickyNav = false %}
<!-- prettier-ignore -->
{% set footerBgColor = "bg-golden-fizz" %}

<!-- prettier-ignore -->
{% block content %}
<div>
  <p class="mb-base lg:mb-lg/base">
    Our inaugural conference was held March 22-24 at the
    <a
      class="inline-link"
      href="https://www.collegeforcreativestudies.edu/experience/why-ccs/campus"
      >A. Alfred Taubman Center for Design Education</a
    >
    in Detroit, Michigan and brought together speakers across four tracks: Ideas
    & Research, Arts & Communication, Entrepreneurship & Technology, and
    Activism & Governance.
  </p>
  <!-- prettier-ignore -->
  {% call callToAction.render() %}
  <!-- prettier-ignore -->
  {% call callToAction.item() %}
  <a class="animated-link uppercase" href="/2019-conference/replay">
    Watch the replay
  </a>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% endcall %}
</div>
<!-- prettier-ignore -->
{% endblock %}
