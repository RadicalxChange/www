<!-- prettier-ignore -->
{% import "components/introduction.njk" as introduction %}
<!-- prettier-ignore -->
{% import "components/action-button.njk" as actionButton %}
<!-- prettier-ignore -->
{% import "components/logo.njk" as logo %}
<!-- prettier-ignore -->
{% import "components/menu.njk" as menu %}
<!-- prettier-ignore -->
{% import "components/footer.njk" as footer %}

<!-- prettier-ignore -->
{{ menu.render() }}
<!-- prettier-ignore -->
{{ introduction.render(headerText, introductionBlurb) }}
<section
  id="chapters"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 mt-16 lg:mt-lg/margin mb-12"
>
  <div
    class="markdown col-span-columns lg:col-start-column-1 lg:col-end-gutter-8 mb-4 lg:mb-0"
  >
    {{ chaptersDescription | markdown | safe }}
  </div>
  <div class="col-span-columns lg:col-start-column-9 lg:col-end-margin-2">
    <!-- prettier-ignore -->
    {{ actionButton.render(href="/chapters", label="Join your local chapter")}}
  </div>
</section>
<section id="team" class="about_team">
  <div class="about_team_the-team">
    <h2 class="h-8 lg:h-12 border-b">Team members</h2>
    <table class="block">
      <tbody class="block">
        <!-- prettier-ignore -->
        {% for member in team %}
        <tr class="flex items-center h-8 lg:h-12 border-b">
          <td style="width: calc(50% + 1rem)">
            <a
              class="see-more-link text-size--1 uppercase"
              href="/team/{{ member.name | slug }}"
              >{{ member.name }}</a
            >
          </td>
          <td style="width: calc(50% - 1rem)">
            <span class="text-size--1">{{ member.title }}</span>
          </td>
        </tr>
        <!-- prettier-ignore -->
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="about_team_the-board">
    <h2 class="h-8 lg:h-12 border-b">Board members</h2>
    <ul class="lg:h-36 py-2 border-b">
      <!-- prettier-ignore -->
      {% for member in board %}
      <li class="comma-separated">
        <a class="see-more-link" href="/board/{{ member.name | slug }}">{{
          member.name
        }}</a>
      </li>
      <!-- prettier-ignore -->
      {% endfor %}
    </ul>
    <div class="markdown markdown-sm pt-2">
      {{ aboutBlurb | markdown | safe }}
    </div>
  </div>
</section>
<section id="press" class="about_press">
  <div class="about_press_title">
    <h2 class="h-8 lg:h-12">Press</h2>
  </div>
  <div class="about_press_hr"></div>
  <ul class="about_press_links">
    <!-- prettier-ignore -->
    {% for article in press | slice(0, 43) %}
    <li class="press_link">
      <a class="block" href="{{ article.href }}"
        ><p class="text-size--2">
          <span class="inline-link">{{ article.publication }}</span>
        </p>
        <p class="text-size--2">{{ article.date | readableDate }}</p></a
      >
      <div class="press_link-details">
        <p class="text-white text-size--3">{{ article.title }}</p>
      </div>
    </li>
    <!-- prettier-ignore -->
    {% endfor %}
    <li class="text-size--2">
      <a href="/press" class="inline-link">See all press...</a>
    </li>
  </ul>
</section>
<section id="supporters" class="about_support">
  <div class="about_support_hr"></div>
  <div class="about_support_title">
    <h2>Supported by</h2>
  </div>
  <ul class="about_support_supporters">
    <!-- prettier-ignore -->
    {% for supporter in supporters %}
    <li class="comma-separated">
      <a class="see-more-link" href="{{ supporter.href }}">{{
        supporter.name
      }}</a>
    </li>
    <!-- prettier-ignore -->
    {% endfor %}
  </ul>
</section>
<!-- prettier-ignore -->
{{ footer.render() }}
<script>
  // prettier-ignore
  {% include "components/menu.js" %}
</script>
