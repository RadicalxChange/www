<!-- prettier-ignore -->
{% macro event(text, href) %}
<li class="group">
  <a class="flex items-center justify-between py-4" href="{{ href }}">
    <h2
      class="font-display text-size-display lg:text-size-lg/display break-words"
    >
      {{ text }}
    </h2>
    {% if href.startsWith("/") %}
    <img
      class="hidden lg:block invisible group-hover:visible"
      src="/images/ui/in-arrow.svg"
      width="90"
      height="81"
    />
    {% else %}
    <img
      class="hidden lg:block invisible group-hover:visible"
      src="/images/ui/in-arrow.svg"
      style="transform: rotate(135deg)"
      width="90"
      height="81"
    />
    {% endif %}
  </a>
</li>
<!-- prettier-ignore -->
{% endmacro %}

