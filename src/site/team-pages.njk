---
layout: layouts/_base.njk
pagination:
  data: team
  size: 1
  alias: member
permalink: "team/{{ member.name | slug }}/"
defaultBio: |
  _No biography available at this time._
---

<!-- prettier-ignore -->
{% import "components/close-button.njk" as closeButton %}

<!-- prettier-ignore -->
{{ closeButton.render(href="/about#team") }}
<div class="grid grid-cols-4 lg:grid-cols-12">
  <div class="team_image">
    <img class="w-full" src="/images/team/{{ member.image }}" />
  </div>
  <div class="team_bio">
    <h1 class="lg:pr-32 mb-4 lg:mb-8">
      {{ member.name }} ({{ member.title }})
    </h1>
    <div class="md-container">
      <!-- prettier-ignore -->
      {% if member.bio %}
      {{ member.bio | markdown | safe }}
      <!-- prettier-ignore -->
      {% else %}
      {{ defaultBio | markdown | safe }}
      <!-- prettier-ignore -->
      {% endif %}
    </div>
  </div>
</div>
