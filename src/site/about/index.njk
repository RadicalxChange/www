{% import "components/footer.njk" as footer %}

<!-- prettier-ignore -->
{{ menu.render() }}
<!-- prettier-ignore -->
{{ introduction.render(headerText, introductionBlurb) }}
<section
  id="chapters"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 pt-4 lg:pt-4 my-margin"
>
  <div class="hidden lg:block col-start-column-1 col-end-gutter-4">
    <h2>Chapters</h2>
  </div>
  <div
    class="col-span-columns lg:col-start-column-5 lg:col-end-margin-2 space-y-8"
  >
    <div class="markdown">
      {{ chaptersDescription | markdown | safe }}
    </div>
    <div>
      {{ actionButton.render(href="/about/chapters", label="Join your local chapter")}}
    </div>
  </div>
  <div class="col-span-columns pb-12 lg:pb-16 lg:border-b"></div>
</section>
<section
  id="foundation"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 my-margin"
>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-4 mb-2 lg:mb-0"
  >
    <h2 class="pb-2 lg:pb-0 border-b lg:border-b-0">Foundation</h2>
  </div>
  <div
    class="col-span-columns lg:col-start-column-5 lg:col-end-margin-2 mb-8 lg:mb-16"
  >
    <div class="markdown">
      {{ aboutBlurb | markdown | safe }}
    </div>
  </div>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-6 mb-8 lg:mb-0"
  >
    <h3 class="pb-2 border-b">Board members</h3>
    <table class="block">
      <tbody class="block">
        {% for member in board %}
        <tr class="flex items-center h-12 border-b">
          <td class="text-size--1">
            <a
              class="see-more-link uppercase"
              href="/board/{{ member.name | slug }}"
              >{{ member.name }}</a
            >
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-span-columns lg:col-start-column-7 lg:col-end-margin-2">
    <h3 class="pb-2 border-b">Team members</h3>
    <table class="block">
      <tbody class="block">
        <!-- prettier-ignore -->
        {% for member in team %}
        <tr class="flex items-center h-12 border-b">
          <td style="width: calc(50% + 1rem)" class="text-size--1">
            <a
              class="see-more-link uppercase"
              href="/team/{{ member.name | slug }}"
              >{{ member.name }}</a
            >
          </td>
          <td style="width: calc(50% - 1rem)" class="text-size--1">
            {{ member.title }}
          </td>
        </tr>
        <!-- prettier-ignore -->
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-span-columns pb-12 lg:pb-32 lg:border-b"></div>
</section>
<section
  id="press"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 my-margin"
>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-4 mb-2 lg:mb-0"
  >
    <h2 class="pb-2 lg:pb-0 border-b lg:border-b-0">Press</h2>
  </div>
  <ul
    class="col-span-columns lg:col-start-column-5 lg:col-end-margin-2 grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-4 gap-y-4 lg:gap-y-8 justify-items-start"
  >
    <!-- prettier-ignore -->
    {% for article in press | slice(0, 43) %}
    <li class="about_press-link group relative">
      <a class="block text-size--2" href="{{ article.href }}"
        ><p>
          <span class="group-hover:underline">{{ article.publication }}</span>
        </p>
        <p>{{ article.date | readableDate }}</p></a
      >
      <div
        class="about_press-description z-10 absolute top-1/2 left-1/4 w-max p-2 bg-light-black text-white text-size--3"
      >
        {{ article.title }}
      </div>
    </li>
    <!-- prettier-ignore -->
    {% endfor %}
    <li class="text-size--2">
      <a href="/press" class="inline-link">See all press...</a>
    </li>
  </ul>
  <div class="col-span-columns pb-12 lg:pb-16 lg:border-b"></div>
</section>
<section
  id="supporters"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 pb-4 lg:pb-8 my-margin"
>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-6 mb-2 lg:mb-0"
  >
    <h2 class="pb-2 lg:pb-0 border-b lg:border-b-0">Supported by</h2>
  </div>
  <div
    class="col-span-columns lg:col-start-column-7 lg:col-end-margin-2 space-y-8"
  >
    <ul class="text-size--1">
      {%- for supporter in supporters -%}
      <li class="comma-separated">
        <a href="{{ supporter.href }}">{{ supporter.name }}</a>
      </li>
      {%- endfor -%}
    </ul>
    <div class="text-size--1">
      <a
        href="mailto:paul@radicalxchange.org?subject=Becoming%20a%20supporter&body=I'd%20like%20to%20become%20a%20RadicalxChange%20supporter."
        target="_blank"
        class="thick-link uppercase"
        >Become a supporter</a
      >
    </div>
  </div>
</section>
