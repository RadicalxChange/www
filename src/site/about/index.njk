</section>
<section
  id="foundation"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 my-margin"
>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-4 mb-4 lg:mb-0"
  >
    <h2 class="pb-4 lg:pb-0 border-b lg:border-b-0">Foundation</h2>
  </div>
  <div
    class="col-span-columns lg:col-start-column-5 lg:col-end-margin-2 mb-12 lg:mb-16"
  >
    <div class="markdown">
      {{ aboutBlurb | markdown | safe }}
    </div>
  </div>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-6 mb-12 lg:mb-0"
  >
    <h3 class="pb-4 border-b">Board members</h3>
    <table class="block">
      <tbody class="block">
        {% for member in board %}
        <tr
          class="flex items-center h-line-5/2 lg:h-line-3 xl:h-line-5/2 border-b text-size--1"
        >
          <td>
            <a
              class="see-more-link uppercase"
              href="/board/{{ member.name | slug }}"
              >{{ member.name }}</a
            >
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-span-columns lg:col-start-column-7 lg:col-end-margin-2">
    <h3 class="pb-4 border-b">Team members</h3>
    <table class="block">
      <tbody class="block">
        <!-- prettier-ignore -->
        {% for member in team %}
        <tr
          class="flex items-center h-line-5/2 lg:h-line-3 xl:h-line-5/2 border-b text-size--1"
        >
          <td style="width: calc(50% + 1rem)">
            <a
              class="see-more-link uppercase"
              href="/team/{{ member.name | slug }}"
              >{{ member.name }}</a
            >
          </td>
          <td style="width: calc(50% - 1rem)" class="clamp clamp-2">
            {{ member.title }}
          </td>
        </tr>
        <!-- prettier-ignore -->
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-span-columns pb-6 lg:pb-16 lg:border-b"></div>
</section>
<section
  id="press"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 my-margin"
>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-gutter-4 mb-4 lg:mb-0"
  >
    <h2 class="pb-4 lg:pb-0 border-b lg:border-b-0">Press</h2>
  </div>
  <ul
    class="col-span-columns lg:col-start-column-5 lg:col-end-margin-2 grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-4 gap-y-4 lg:gap-y-6 justify-items-start"
  >
    <!-- prettier-ignore -->
    {% for article in press | slice(0, 43) %}
    <li class="about_press-link group relative">
      <a class="block text-size--2" href="{{ article.href }}"
        ><p>
          <span class="group-hover:underline">{{ article.publication }}</span>
        </p>
        <p>{{ article.date | readableDate }}</p></a
      >
      <div
        class="about_press-description z-10 absolute top-1/2 left-1/8 w-max p-2 bg-light-black text-white text-size--4"
      >
        {{ article.title }}
      </div>
    </li>
    <!-- prettier-ignore -->
    {% endfor %}
    <li class="text-size--2">
      <a href="/about/press" class="inline-link">See all press...</a>
    </li>
  </ul>
  <div class="col-span-columns pb-12 lg:pb-16 lg:border-b"></div>
</section>
<section
  id="supporters"
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 pb-4 lg:pb-8 my-margin"
>
