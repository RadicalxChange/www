<script>
  const twitchContainer = $("[data-twitch-container]");
  const logosLink = $("[data-logos-link]");
  const logosIframe = $(`<iframe src="https://player.twitch.tv/?channel=radicalxchangelogos&parent=${window.location.hostname}" frameborder="0" allowfullscreen="true" scrolling="no"></iframe>`);
  const pathosLink = $("[data-pathos-link]");
  const pathosIframe = $(`<iframe src="https://player.twitch.tv/?channel=radicalxchangepathos&parent=${window.location.hostname}" frameborder="0" allowfullscreen="true" scrolling="no"></iframe>`);

  function showLogos() {
    twitchContainer.empty();
    twitchContainer.append(logosIframe);
    logosLink.addClass("font-bold");
    pathosLink.removeClass("font-bold");
  }

  function showPathos() {
    twitchContainer.empty();
    twitchContainer.append(pathosIframe);
    logosLink.removeClass("font-bold");
    pathosLink.addClass("font-bold");
  }

  $(window).on("hashchange", function (e) {
    if (window.location.hash === "#logos-stage") {
      showLogos();
    } else if (window.location.hash === "#pathos-stage") {
      showPathos();
    }
  });

  if (window.location.hash === "#logos-stage") {
    showLogos();
  } else {
    showPathos();
  }

