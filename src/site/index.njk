<main>
  <!-- prettier-ignore -->
  {{ nav.stickyMenuButton() }}
  <!-- prettier-ignore -->
  {% call nav.render(false, true) %}
  <div class="hidden lg:block">
    <p class="mb-base lg:mb-lg/base">
      RadicalxChange supports Testing, Tracing & Supported Isolation (#TTSI).
    </p>
    <p>
      <a class="animated-link" href="/covid-19">Read more</a>
    </p>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call header.render() %}
  <div class="flex-grow flex flex-col justify-end">
    <div class="twitch-container">
      <iframe
        src="https://player.twitch.tv/?channel=radicalxchangepathos&parent=www.example.com"
        frameborder="0"
        allowfullscreen="true"
        scrolling="no"
      ></iframe>
    </div>
    <div class="flex justify-between">
      <p>
        RadicalxChange Annual Conference<br />June 19-21, 2020 Hosted Online
      </p>
      <p>
        <span class="mr-base lg:mr-lg/base">Stages:</span
        ><a class="mr-base lg:mr-lg/base uppercase" href="#">Pathos</a
        ><a class="uppercase" href="#">Logos</a>
      </p>
    </div>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call page.render("Speakers", false) %}
  <div class="flex flex-col justify-between h-full">
    <a
      href="/2020-conference/speakers"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mb-lg lg:mb-lg/lg overflow-hidden"
    >
      {% for s in keynoteSpeakers2020 %}
      <!-- prettier-ignore -->
      <div class="conference-image" style="background-image: linear-gradient(black, black), url('/images/speakers-2020/{{ s.picture }}');">
        <div
          class="absolute bottom-0 right-0 w-1/2 lg:w-2/3 p-sm lg:p-lg/sm bg-white"
        >
          <h4 class="text-sm lg:text-lg/sm">{{ s.name }}</h4>
          <p class="text-xs2 lg:text-lg/xs2">{{ s.title }}</p>
        </div>
        <div class="hidden">
          {{ s.bio }}
        </div>
      </div>
      {% endfor %}
    </a>
    <div class="lg:self-end mb-lg mx-base lg:mb-lg/xl lg:mr-lg/lg lg:ml-0">
      <a class="animated-link uppercase" href="/2020-conference/speakers"
        >See all speakers</a
      >
    </div>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call page.render("Schedule") %}
  <div class="conference-schedule">
    <iframe
      class="flex-grow mb-lg lg:mb-lg/lg border-2 rounded bg-white"
      src="/2020-conference/schedule"
    ></iframe>
    <div class="lg:self-end">
      <a class="animated-link uppercase" href="/2020-conference/schedule"
        >See the schedule</a
      >
    </div>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call page.render("Hackathon", true) %}
  <div class="flex flex-col justify-between h-full">
    <div class="md-container mb-lg lg:mb-lg/lg">
      {{ gitxchange | markdown | safe }}
    </div>
    <div class="lg:self-end">
      <a
        class="animated-link uppercase"
        href="https://gitcoin.co/hackathon/GitxChange/?tab=hackathon:25"
        >Join the hackathon</a
      >
    </div>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call page.render("#RxC on Twitter") %}
  <div class="border-2 rounded">
    <a
      class="twitter-timeline"
      data-height="768"
      href="https://twitter.com/RadxChange?ref_src=twsrc%5Etfw"
    >
      Loading tweets...
    </a>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
  <!-- prettier-ignore -->
  {% call page.render("With the support of") %}
  <div class="flex flex-col justify-between h-full">
    <ul
      class="grid grid-cols-2 lg:grid-cols-3 gap-base lg:gap-lg/base col-gap-lg lg:col-gap-lg/lg mb-lg lg:mb-lg/lg"
    >
      {% for s in sponsors%}
      <li>
        <a class="flex items-center h-full" href="{{ s.href }}">{{ s.name }}</a>
      </li>
      {% endfor %}
    </ul>
    <div class="lg:self-end">
      <a class="animated-link uppercase" href="#" data-modal-trigger="sponsor"
        >Support the conference</a
      >
    </div>
  </div>
  <!-- prettier-ignore -->
  {% endcall %}
</main>
