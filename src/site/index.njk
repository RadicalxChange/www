---
layout: layouts/_base.njk
---

<!-- prettier-ignore -->
{% import "components/menu.njk" as menu %}
<!-- prettier-ignore -->
{% import "components/footer.njk" as footer %}

<!-- prettier-ignore -->
{{ menu.render() }}
<div class="bg-golden-fizz">
  <main class="home-main">
    <div class="home-main_logo">
      <a class="inline-block" href="/"
        ><img class="logo" src="/images/logos/logo.svg"
      /></a>
    </div>
    <div class="home-main_carousel">
      <div class="home-main_carousel-inner">
        <!-- prettier-ignore-line -->
        {% set concepts = ["Data as Labour / Data Dignity (DaL/DD)", "Quadratic
        Voting (QV)", "Radical Antitrust", "Intersectional Social Data (ISD)",
        "Quadratic, Financing (QF)", "COST / SALSA"] %}
        <!-- prettier-ignore-line -->
        {% set columnRow = [[1, 3],[4, 3],[7, 3],[1, 4],[4, 4],[7, 4]] %}
        <!-- prettier-ignore-line -->
        {% for concept in concepts%}
        <!-- prettier-ignore-line -->
        {% set column = columnRow[loop.index0][0] %}
        <!-- prettier-ignore-line -->
        {% set row = columnRow[loop.index0][1] %}
        <a class="home-main_concept" href="#">
          <img
            class="w-full max-w-sm mb-4"
            src="data:image/svg+xml;base64,"
          />
          <h2 class="text-center">{{ concept }}</h2>
        </a>
        <!-- prettier-ignore-line -->
        {% endfor %}
      </div>
    </div>
    <div id="socialMovementMarquee" class="home-main_marquee">
      <span class="font-display text-size-6 uppercase mx-6 whitespace-no-wrap"
        >A Social Movement for Next-Generation Political Economies</span
      >
    </div>
    <aside class="home-main_aside">
      <a class="block m-4" href="#">
        <h2 class="font-bold">
          Distribute Emergence<br />GitxChange2: Quadratic Funding Hackathon
        </h2>
        <p>October 5 - November 1, 2020</p>
      </a>
      <hr class="m-4" />
      <div class="mt-4 mx-4 overflow-y-hidden">
        <div>
          <p class="font-bold text-size--2">E. Glen Weyl</p>
          <p class="text-size--2">(twitter) Aug 2, 2020</p>
          <p class="text-size--2">
            I gave it a cold? I gave it a virus. A computer virus. God creates
            dinosaurs. God destroys dinosaurs. God creates Man. Man destroys
            God. Man creates Dinosaurs. Forget the fat lady! You're obsessed
            with the fat lady! Drive us out of here! Do you have any idea how
            long it takes those cups to decompose.
          </p>
        </div>
      </div>
    </aside>
    <div class="home-main_banner">
      <h2
        class="mb-4 text-center font-display text-size-6 leading-none uppercase"
      >
        Upgrade the source code
      </h2>
      <button class="menu-button">
        <img src="/images/ui/menu-button.svg" />
      </button>
    </div>
  </main>
</div>
<!-- prettier-ignore -->
{{ footer.render() }}
<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/dynamic-marquee@1"
></script>
<script type="text/javascript">
  const $marquee = document.getElementById("socialMovementMarquee");
  const $message = $marquee.children[0];
  $marquee.removeChild($message);

  const marquee = new dynamicMarquee.Marquee($marquee, { rate: -40 });
  const control = dynamicMarquee.loop(marquee, []);

  function startMarquee() {
    control.update([() => $message.cloneNode(true)]);
  }

  function stopMarquee() {
    control.update([]);
  }

  function isLarge() {
    return window.innerWidth >= 768;
  }

  let wasLarge = isLarge();
  if (wasLarge) {
    startMarquee();
  }
  window.addEventListener("resize", function () {
    if (wasLarge && !isLarge()) {
      wasLarge = false;
      stopMarquee();
    } else if (!wasLarge && isLarge()) {
      wasLarge = true;
      startMarquee();
    }
  });
</script>
<script>
  // prettier-ignore
  {% include "components/menu.js" %}
</script>
