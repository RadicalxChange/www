<!-- prettier-ignore -->
{% macro header(headerText, margin="") %}
<h1
  class="font-display text-header lg:text-lg/header uppercase leading-display {{
    margin
  }}"
>
  <!-- prettier-ignore -->
  {{ headerText }}
</h1>
<!-- prettier-ignore -->
{% endmacro %}

<!-- prettier-ignore -->
{% macro section() %}
<section class="color-every-other-child">
  <div
    class="lg:min-h-tall lg-tall:min-h-screen py-base lg:py-lg/xl lg:px-lg/lg"
  >
    <!-- prettier-ignore -->
    {{ caller() }}
  </div>
</section>
<!-- prettier-ignore -->
{% endmacro %}

<!-- prettier-ignore -->
{% macro render(headerText, padding=true) %}
<section class="color-every-other-child lg:flex">
  <div
    class="flex flex-col w-full lg:w-span4 lg:min-h-tall lg-tall:min-h-screen py-base lg:py-lg/xl px-base lg:pr-lg/sm lg:pl-lg/lg"
  >
    <!-- prettier-ignore -->
    {{ header(headerText) }}
  </div>
  <div
    class="flex flex-col w-full lg:w-span8 lg:min-h-tall lg-tall:min-h-screen
    {{ 'pb-base lg:py-lg/xl px-base lg:pr-lg/lg lg:pl-lg/sm' if padding else 'lg:pl-lg/sm' }}"
  >
    <!-- prettier-ignore -->
    {{ caller() }}
  </div>
</section>
<!-- prettier-ignore -->
{% endmacro %}
