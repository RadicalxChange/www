<!-- prettier-ignore -->
{% macro render(href, text="Close") %}
<div
  class="z-10 fixed flex justify-center lg:top-0 lg:right-0 bottom-0 lg:bottom-auto w-full lg:w-auto lg:mt-lg/margin lg:mr-lg/margin mb-margin lg:mb-0"
>
  <a
    class="inline-block py-3 px-8 bg-black rounded-oval text-white text-size--1 uppercase"
    href="{{ href }}"
    >{{ text }}</a
  >
</div>
<!-- prettier-ignore -->
{% endmacro %}
