<!-- prettier-ignore -->
{% import "components/close-button.njk" as closeButton %}

<!-- prettier-ignore -->
{% macro render(concept) %}
<!-- prettier-ignore -->
{{ closeButton.render(href="/concepts") }}
<section
  class="grid grid-cols-layout-4 lg:grid-cols-layout-12 py-margin lg:py-lg/margin"
>
  <header
    class="col-span-columns order-1 justify-self-center lg:justify-self-stretch lg:pr-6 mb-8 lg:mb-4"
  >
    <h1
      class="font-display text-size-display lg:text-size-lg/display text-center lg:text-left uppercase"
    >
      {{ concept.title }}
    </h1>
  </header>
  <div
    class="col-span-margins lg:col-start-column-8 lg:col-end-margin-2 order-2 lg:order-3 flex items-start justify-center lg:pl-lg/margin lg:border-b lg:border-t lg:border-l mb-8 lg:mb-0"
  >
    <img
      class="lg:sticky lg:top-0 w-full lg:py-8"
      src="data:image/svg+xml;base64,"
    />
  </div>
  <div
    class="col-span-columns lg:col-start-column-1 lg:col-end-column-8 order-3 lg:order-2 lg:flex lg:flex-col lg:justify-between lg:py-8 lg:pr-lg/margin lg:border-b lg:border-t mb-12 lg:mb-0"
  >
    <div class="markdown mb-8 lg:mb-16">
      {{ concept.description | markdown | safe }}
    </div>
    <div>
      <a class="animated-link uppercase" href="#tools-and-readings"
        >Tools & Readings</a
      >
    </div>
  </div>
  <ul
    id="tools-and-readings"
    class="col-span-columns order-4 grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-8 lg:mt-8"
  >
    <!-- prettier-ignore -->
    {% for item in concept.toolsAndReadings %}
    <li class="concepts-page_item-bottom space-y-8">
      <h3>{{ item.title }}</h3>
      <p>{{ item.description }}</p>
      <ul class="flex space-x-4">
        <!-- prettier-ignore -->
        {% for link in item.links %}
        <li>
          <a class="animated-link uppercase" href="{{ link.href }}"
            >{{ link.platform }}
          </a>
        </li>
        <!-- prettier-ignore -->
        {% endfor %}
      </ul>
    </li>
    <!-- prettier-ignore -->
    {% endfor %}
  </ul>
</section>
<!-- prettier-ignore -->
{% endmacro %}
