---
permalink: "kiosk/blog/{{ slug | defaultSlug: title }}/index.html"
---

<!-- prettier-ignore -->
{% import "components/close-button.njk" as closeButton %}

<!-- prettier-ignore -->
{% extends "layouts/_base.njk" %}

<!-- prettier-ignore -->
{% set ogType="article" %}
<!-- prettier-ignore -->
{% set headerText="Blog" %}
<!-- prettier-ignore -->
{% set headerHref="/blog" %}

<!-- prettier-ignore -->
{% block metaTags %}
<!-- prettier-ignore -->
{{ super() }}
<meta property="og:article:published_time" content="{{ date }}" />
<meta property="og:article:author" content="{{ postAuthor }}" />
<!-- prettier-ignore -->
{% endblock %}

<!-- prettier-ignore -->
{% block body %}
<div
  id="scrollIndicator"
  class="fixed z-10 top-0 left-0 h-1 bg-black w-0"
></div>
<!-- prettier-ignore -->
{{ closeButton.render("/kiosk") }}
<div
  class="grid grid-cols-layout-4 lg:grid-cols-layout-16 pt-margin pb-32 lg:py-lg/margin"
>
  <article
    class="col-span-columns lg:col-start-column-4 lg:col-end-gutter-13 markdown markdown-sm"
  >
    <header>
      <h1>{{ postHeader }}</h1>
      <p>{{ postAuthor }}</p>
      <p>{{ date | readableDate }}</p>
    </header>
    {{ content | markdown | safe }}
  </article>
</div>
<script>
  const $scrollIndicator = document.getElementById("scrollIndicator");

  function updateScrollIndicator() {
    const percentage =
      (window.scrollY /
        (window.document.body.scrollHeight - window.innerHeight)) *
      100;
    $scrollIndicator.style.width = percentage + "%";
  }
  window.addEventListener("scroll", updateScrollIndicator);
</script>
<!-- prettier-ignore -->
{% endblock %}
