---
permalink: "blog/posts/{{ slug | defaultSlug: title }}/index.html"
---

<!-- prettier-ignore -->
{% extends "layouts/_base.njk" %}

<!-- prettier-ignore -->
{% set ogType="article" %}
<!-- prettier-ignore -->
{% set headerText="Blog" %}
<!-- prettier-ignore -->
{% set headerHref="/blog" %}

<!-- prettier-ignore -->
{% block metaTags %}
<!-- prettier-ignore -->
{{ super() }}
<meta property="og:article:published_time" content="{{ date }}" />
<meta property="og:article:author" content="{{ postAuthor }}" />
<!-- prettier-ignore -->
{% endblock %}

<!-- prettier-ignore -->
{% block content %}
<main>
  <h1 class="text-size-8">
    {{ postHeader }}
  </h1>
  <p class="text-size--1">{{ postAuthor }} / {{ date | readableDate }}</p>
  <div class="md-container">
    {{ content | markdown | safe }}
  </div>
</main>
<!-- prettier-ignore -->
{% endblock %}
