---
permalink: "blog/posts/{{ slug | defaultSlug: title }}/index.html"
---

<!-- prettier-ignore -->
{% import "components/close-button.njk" as closeButton %}

<!-- prettier-ignore -->
{% extends "layouts/_base.njk" %}

<!-- prettier-ignore -->
{% set ogType="article" %}
<!-- prettier-ignore -->
{% set headerText="Blog" %}
<!-- prettier-ignore -->
{% set headerHref="/blog" %}

<!-- prettier-ignore -->
{% block metaTags %}
<!-- prettier-ignore -->
{{ super() }}
<meta property="og:article:published_time" content="{{ date }}" />
<meta property="og:article:author" content="{{ postAuthor }}" />
<!-- prettier-ignore -->
{% endblock %}

<!-- prettier-ignore -->
{% block body %}
<div
  id="scrollIndicator"
  class="fixed z-10 top-0 left-0 h-1 bg-black w-0"
></div>
<!-- prettier-ignore -->
{{ closeButton.render() }}
<div
  class="grid grid-cols-layout-4 lg:grid-cols-layout-16 pt-margin pb-32 lg:py-lg/margin"
>
  <div class="col-span-columns lg:col-start-column-4 lg:col-end-gutter-13">
    <header>
      <h1
        class="font-display text-size-display lg:text-size-lg/display uppercase break-words"
      >
        {{ postHeader }}
      </h1>
      <p style="margin-top: 3em" class="text-size--1">{{ postAuthor }}</p>
      <p style="margin-bottom: 3em" class="text-size--1">
        {{ date | readableDate }}
      </p>
    </header>
    <article class="markdown markdown-sm">
      {{ content | markdown | safe }}
    </article>
  </div>
</div>
<script>
  const $scrollIndicator = document.getElementById("scrollIndicator");

  function updateScrollIndicator() {
    const percentage =
      (window.scrollY /
        (window.document.body.scrollHeight - window.innerHeight)) *
      100;
    $scrollIndicator.style.width = percentage + "%";
  }
  window.addEventListener("scroll", updateScrollIndicator);
</script>
<!-- prettier-ignore -->
{% endblock %}
